        <!--<div class="col">-->
          <!--<button id="humanButton" trial_id="{{ trial_id }}" class="poemButton">Human</button>-->
        <!--</div>-->
        <!--<div class="col">-->
          <!--<button id="computerButton" trial_id="{{ trial_id }}" class="poemButton">Computer</button>-->
        <!--</div>-->
      <!--</div>-->

      <div class="row justify-content-md-center">
        
      </div>

    </div>

  </body>
</html>
